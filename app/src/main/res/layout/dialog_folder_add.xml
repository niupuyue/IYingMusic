<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_corner_7"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingTop="20dp"
            android:paddingRight="15dp"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/tvFolderAddDialogTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/MainActivity_add_folder_dialog_title"
                android:textColor="@color/gray_333"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etDialogFolderInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:hint="@string/MainActivity_add_folder_dialog_input_hint"
                android:paddingLeft="4dp"
                android:paddingTop="4dp"
                android:paddingRight="4dp"
                android:paddingBottom="4dp"
                android:textColor="@color/gray_666"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="15dp"
            android:background="@color/gray_ebef" />

        <LinearLayout
            android:id="@+id/llDialogPrivacyPolicyAgree"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/transparent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDialogFolderAddCancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_lb7_white"
                android:gravity="center_horizontal"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="@string/MainActivity_add_folder_dialog_cancel"
                android:textColor="#646A74"
                android:textSize="16sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="50dp"
                android:background="@color/gray_ebef"
                android:paddingTop="15dp"
                android:paddingBottom="15dp" />

            <TextView
                android:id="@+id/tvDialogFolderAddConfirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_rb7_white"
                android:gravity="center_horizontal"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="@string/MainActivity_add_folder_dialog_add"
                android:textColor="@color/red_4d52"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>